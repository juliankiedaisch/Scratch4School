{
  "include": ["src"],
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "ESNext",
    "jsx": "react",

    /* Modules */
    "module": "commonjs",
    "types": ["./src/types.d.ts"],

    /* Emit */
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/types/",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": false,

    /* Completeness */
    "skipLibCheck": true
  }
}
