    "raw-loader": "0.5.1",
    "twgl.js": "4.24.0"
  },
  "peerDependencies": {
    "scratch-render-fonts": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.28.5",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.28.5",
    "@scratch/scratch-vm": "12.0.2-hotfix",
    "babel-loader": "9.2.1",
    "copy-webpack-plugin": "6.4.1",
    "docdash": "0.4.0",
    "eslint": "9.38.0",
    "eslint-config-scratch": "12.0.20",
    "gh-pages": "1.2.0",
    "globals": "16.4.0",
    "html-webpack-plugin": "5.6.4",
    "jsdoc": "3.6.11",
    "playwright-chromium": "1.56.1",
    "scratch-render-fonts": "1.0.245",
    "scratch-semantic-release-config": "4.0.0",
    "scratch-storage": "4.1.21",
    "scratch-webpack-configuration": "3.1.0",
    "semantic-release": "19.0.5",
    "tap": "21.1.1",
    "terser-webpack-plugin": "5.3.14",
    "webpack": "5.102.1",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "5.2.2"
  }
