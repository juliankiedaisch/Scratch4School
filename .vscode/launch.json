{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Scratch + Backend",
      "configurations": ["Run Backend (Python)", "Run Scratch (npm)"],
      "stopAll": true,
      "preLaunchTask": ""
    }
  ],
  "configurations": [
    {
      "name": "Run Scratch (npm)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm start",
      "cwd": "${workspaceFolder}/packages/scratch-gui"
    },
    {
      "name": "Run Backend (Python)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/main.py", // passe den Pfad ggf. an
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend"
    }
  ]
}